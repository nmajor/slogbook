<section class="page_body_full">
  <div class="sign_wrapper">
    <h1><%= link_to "", root_path, class: 'logo' %></h1>
    <h4>Forgot your password?</h4>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

      <%= f.text_field :login, :autofocus => true, :placeholder => 'Email' %>

      <div><%= f.submit "Send me reset password instructions", :class => "btn btn-success btn-large btn-block" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
