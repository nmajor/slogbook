<section class="page_body_full">
  <div class="sign_wrapper">
    <h1><%= link_to "", root_path, class: 'logo' %></h1>
    <h4>Resend unlock instructions</h4>

    <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true, :class => 'single_text' %></div>

      <div><%= f.submit "Resend unlock instructions", :class => "btn btn-success btn-large btn-block" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
