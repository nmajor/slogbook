<section class="page">
    <section class="nav_bar">
        <section class="container">
        <ul class="nav">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Blog" %></li>
            <li><%= link_to "Slog" %></li>
            <li><%= link_to "Shop" %></li>
        </ul>
        <div class="user_nav">
            <% if user_signed_in? %>
                Signed in as <%= link_to current_user.username, user_show_path(current_user) %>. Not you?
                <%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %>
            <% else %>
                <%= link_to "Sign in", new_user_session_path %> or <%= link_to "Register", new_user_registration_path %>
            <% end %>
        </div>
        </section>
    </section>

    <section class="brand_bar">
        <section class="container">
            <h1 class="brand">Missionary Slog Book</h1>
            <div class="search">
                <span><input type="text" class="search_input" placeholder="Search..."></span>
            </div>
        </section>
    </section>

    <% if params[:controller] == "slogs" && params[:action] == "index" %>
    <section class="filter_bar">
        <section class="container">
            <section class="slog_filters">
                <%= form_tag :method => 'get' do %>
                    <%= submit_tag "Filter", class: "btn btn-info btn-mini", :id => "submit_filter" %>
                    <%= text_field_tag "mission_filter", nil, :placeholder => "Missions..." %>
                    <%= text_field_tag "tag_filter", nil, :placeholder => "Tags..." %>
                    <%= select_tag "slog_type_filter", options_from_collection_for_select(@slog_types, "id", "name") %>
                    <%= select_tag "time_filter", options_for_select(@times) %>
                <% end %>
            </section>
            <div class="new_slog">
                <% if user_signed_in? %>
                <%= link_to "New Slog", new_slog_path,:class => "btn btn-info btn-mini" %>
                <% end %>
            </div>
        </section>
    </section>
    <% end %>

    <section class="container">
        <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
            <a class="close" data-dismiss="alert">x</a>
            <%= msg %>
        </div>
        <% end %>
        <%= yield %>
    </section>

</section>
