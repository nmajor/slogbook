<%- model_class = Slog -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <% if @slog.mission %>
    <dt><strong><%= model_class.human_attribute_name(:mission) %>:</strong></dt>
    <dd><%= @slog.mission.name %></dd>
  <% end %>
  <dt><strong><%= model_class.human_attribute_name(:slog_type) %>:</strong></dt>
  <dd><%= @slog.slog_type.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @slog.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= raw @slog.body %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @slog.user.username %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              slogs_path, :class => 'btn'  %>
  <% if user_signed_in? && current_user == @slog.user %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_slog_path(@slog), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              slog_path(@slog),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
