<div class="missionship_item" id="missionship_<%= missionship.id %>">
  <div class="missionship_name"><%= missionship.mission_name %></div>
  <div class="missionship_length"><%= missionship.start_date.to_formatted_s(:long) %> to 
    <%= missionship.end_date.to_formatted_s(:long) %></div>
  <div class="missionship_actions"><%= link_to "Edit", edit_missionship_path(missionship), :remote => true %>
    <%= link_to "Delete", missionship_path(missionship), :method => "delete", :confirm => "Are you sure you want to delete this mission from your profile?", :remote => true %></div>
</div>
