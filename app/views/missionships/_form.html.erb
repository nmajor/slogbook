<%= form_for @missionship, remote: true, :html => { :id => @missionship.id ? "missionship_edit_#{@missionship.id}" : "missionship_new" } do |m| %>
  <% if params[:action] == 'new' %>
    <div class="missionship_form missionship_mission_name"><%= m.autocomplete_field :mission_name, autocomplete_mission_name_missionships_path, :placeholder => "Mission name" %></div>
  <% else %>
    <div class="missionship_mission_name"><%= @missionship.mission_name %></div>
  <% end %>
  <div class="missionship_form"><%= m.label :start_date %><%= m.date_select :start_date, :order => [:month, :day, :year], :use_short_month => false,
    :start_year => (Time.now.year), :end_year => (Time.now.year - 70) %></div>
  <div class="missionship_form"><%= m.label :end_date %><%= m.date_select :end_date, :order => [:month, :day, :year], :use_short_month => false,
    :start_year => (Time.now.year), :end_year => (Time.now.year - 70) %></div>
  <div class="missionship_form"><%= m.submit (params[:action] == "new" ? "Add" : "Update" ), :class => "btn btn-primary submit_missionship" %></div>
<% end %>
